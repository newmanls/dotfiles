#!/usr/bin/env bash

set -euo pipefail

bg="${XDG_CONFIG_HOME:-${HOME}/.config}/bg"

if [ "${1:-}" ]; then
    file=$(readlink -f "${1}")

    case $(file --mime-type --brief "${file}") in
        image/*)
            ln -fs "${file}" "${bg}" ;;
        *)
            exit 1 ;;
    esac
fi

hsetroot -cover "${bg}"
