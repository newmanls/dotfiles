#!/usr/bin/env bash

which nmcli > /dev/null 2>&1 || exit 0

network=$(nmcli -t -g NAME,TYPE conn show --active | grep -v ':loopback$' -m 1)
# network_name="${network%:*}"
# network_name="${network_name:-disconnected}"

case "$network" in
    *ethernet)
        label="󰛳 " ;;
    *wireless)
        label="󰤨 " ;;
    *)
        label="󰲛 " ;;
esac

# printf "%s %s\n" "$label" "$network_name"
printf "%s\n" "$label"
