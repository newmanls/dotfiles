#!/usr/bin/env bash

which pactl > /dev/null 2>&1 || exit 0

is_muted() {
    pactl get-sink-mute @DEFAULT_SINK@ | grep 'yes' > /dev/null 2>&1
}

if is_muted; then
    volume="muted"
    label="󰎊 "
else
    volume=$(pactl get-sink-volume @DEFAULT_SINK@ | head -n1 | cut -d'/' -f2)
    label="󰎈"
fi

printf "%s %s\n" "$label" "${volume// /}"
