#!/usr/bin/env bash
# dmenu script for searching pages from Arch Wiki. Depends on arch-wiki-docs
# Author: Newman Sanchez (https://github.com/newmanls)

set -euo pipefail

get_page() {
    find "${wikidir}" -iregex ".*\.html\$" -printf "%P\n" |
        sed "s/_/ /g;s/.html\$//" |
        dmenu -l 16 -p "Arch Wiki" |
        sed "s/ /_/g;s/\$/.html/"
}

main() {
    wikidir="/usr/share/doc/arch-wiki/html/en"
    page=$(get_page)

    xdg-open "${wikidir}/${page}"
}

main
