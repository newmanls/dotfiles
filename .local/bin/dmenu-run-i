#!/usr/bin/env bash
# dmenu_run improved
# if a command ends with "!", it is started in a terminal.
# if a command ends with "?", it is searched with your web browser.

cmd="$(dmenu_path | dmenu $@)"

case ${cmd} in
    *\! ) st -e "${cmd%!}" ;;
    \?* ) xdg-open "https://duckduckgo.com/?q=${cmd#?}" ;;
    * ) ${cmd} ;;
esac
