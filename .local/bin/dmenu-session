#!/usr/bin/env bash
# dmenu script for session management
# Author: Newman Sanchez (https://github.com/newmanls)

set -euo pipefail

prompt=$(uptime -p | sed 's/up/Uptime:/;s/ days\?/d/;s/ hours\?/h/;
    s/ minutes\?/m/;s/,//g')
options="Shutdown\nSuspend\nHibernate\nReboot\nLock\nLogout"
chosen=$(printf "%b" "${options}" | dmenu -p "${prompt}")

case "${chosen}" in
    Shutdown)  systemctl poweroff -i ;;
    Suspend)   systemctl suspend ;;
    Hibernate) systemctl hibernate ;;
    Reboot)    systemctl reboot ;;
    Lock)      i3lock -c "$(xrdb -get background | tr -d \#)" ;;
    Logout)    loginctl terminate-user "$(whoami)" ;;
esac
