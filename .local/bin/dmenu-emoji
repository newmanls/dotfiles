#!/usr/bin/env bash
# simple dmenu script to insert emojis and copy them to clipboard.
# Author: Newman Sanchez (https://github.com/newmanls)

set -euo pipefail

chosen=$(dmenu -l 16 < "${HOME}/.local/share/dotfiles/emoji" | cut -d " " -f1)

xdotool type "${chosen}"
xclip -rmlastnl -selection clipboard <<< "${chosen}"
