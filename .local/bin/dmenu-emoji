#!/usr/bin/env bash
# simple dmenu script to insert emojis and copy them to clipboard.
# Author: Newman Sanchez (https://github.com/newmanls)

set -euo pipefail

pick_emoji() {
    dmenu -p "Emoji picker" -l 16 < "${HOME}/.local/share/dotfiles/emoji" |
        cut -d " " -f1 | tr -d '\n'
}

chosen=$(pick_emoji)

xdotool type "${chosen}"
xclip -selection clipboard <<< "${chosen}"
